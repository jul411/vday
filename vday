  <script>
    const steps = [
      { text: "Oh hiâ€¦ I didnâ€™t see you there.", buttons: ["Hello"] },
      { text: "Since youâ€™re here, I have something to tell youâ€¦", buttons: ["Oh cool, what is it?"] },
      { text: "Itâ€™s a poem.", buttons: ["Can I hear it?"] },
      { text: "Sureâ€¦", buttons: ["Read the poem"] }
    ];

    let step = 0;

    function next() {
      step++;
      if (step < steps.length) {
        document.getElementById('text').innerText = steps[step].text;
        document.getElementById('buttons').innerHTML = `<button onclick=\"next()\">${steps[step].buttons[0]}</button>`;
      } else {
        startPoem();
      }
    }

    function startPoem() {
      document.getElementById('music').play();
      const poem = [
        "[PUT YOUR POEM LINE 1 HERE]",
        "[PUT YOUR POEM LINE 2 HERE]",
        "[PUT YOUR POEM LINE 3 HERE]",
        "[ADD AS MANY LINES AS YOU WANT]"
      ];

      let i = 0;
      document.getElementById('buttons').innerHTML = "";

      const interval = setInterval(() => {
        document.getElementById('text').innerText = poem[i];
        i++;
        if (i >= poem.length) {
          clearInterval(interval);
          setTimeout(showFinal, 2000);
        }
      }, 2500);
    }

    function showFinal() {
      document.getElementById('main').style.display = 'none';
      document.getElementById('final').style.display = 'flex';
    }

    function yes() {
      alert("YAY ðŸ’–ðŸ’–ðŸ’–");
    }

    // Falling hearts
    const hearts = document.getElementById('hearts');
    setInterval(() => {
      const heart = document.createElement('div');
      heart.className = 'heart';
      heart.innerText = 'â¤';
      heart.style.left = Math.random() * 100 + 'vw';
      heart.style.animationDuration = 4 + Math.random() * 3 + 's';
      hearts.appendChild(heart);
      setTimeout(() => heart.remove(), 7000);
    }, 300);
  </script>
